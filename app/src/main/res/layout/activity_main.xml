        android:layout_height="wrap_content"
        android:hint="아무거나"
        android:id="@+id/EDT1"></EditText>
    <Button
        android:id="@+id/btn_Intent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent"></Button>




</LinearLayout>